<div class="tournament_summary">
  <h3><%= link_to tournament.name, tournament %></h3>
  <div class="stats">
    Player Count: <span><%= tournament.users.size %></span><br/>
    Round <span><%= tournament.rounds.size %></span> out of <%= tournament.total_rounds %>.
    <%= (link_to "edit tournament", edit_tournament_path(tournament.id)) if can? :manage, tournament %>
  </div>
  <p><%= tournament.description %></p>
</div>
