<%= render :partial => "application/notice", :object => @tournament %>
<%= form_for @tournament do |f| %>
  <%= field_set_tag do %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :game_type %>
    <%= f.select :game_type, Tournament::AVAILABLE_GAMES %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :total_rounds, "Total rounds <small>(only applicable to the swedish mode)</small>".html_safe %>
    <%= f.text_field :total_rounds, :size => 5 %>
  <% end %>

  <%= field_set_tag do %>
    <%= f.label :description %>
    <%= f.text_area :description, :cols => 80, :rows => 4 %>
  <% end %>

  <%= f.submit :class => "base_button" %>
<% end %>
